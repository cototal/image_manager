{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Images</h1>
            <a href="{{ path('image_new') }}">Create new</a>
        </div>
        <div class="col-md-6">
            <div id="multi-upload-area">
                <h3>Image Drop</h3>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td><a href="{{ path('image_show', {'id': image.id}) }}">{{ image.displayName }}</a></td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-outline-dark" href="{{ path('image_edit', {'id': image.id}) }}">Edit</a>
                        {{ include("image/_delete_link.html.twig", {image: image}) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
